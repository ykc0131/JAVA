	void terisGrid() {
		
	}
	
	void blockRandom() {
		Random r = new Random(7);
		
		try(FileOutputStream fos = new FileOutputStream(input);){
			fos.write(r.nextInt(20));
		}
		catch(IOException e) {
			
		}
	}	
	
	
	void game() {
		
		try (FileInputStream fin = new FileInputStream(input);){
			int x = fin.read();
			
			JButton a = b[x][0];
			a.setBackground(Color.DARK_GRAY);
		}
		catch(IOException e) {
			
		}
	}
	
	public static void main(String[] args) {
		new Tetris();
	}
}





